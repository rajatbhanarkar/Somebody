<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/rlnmdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightSkin"
        android:padding="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/hospital"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvnmdlname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:text="Aditya Hospital"
                android:textColor="@color/midnightBlue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvnmdladdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:text="Napier Town, Jabalpur"
                android:textColor="@color/midnightBlue"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvnmdldistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:text="2.3KM Away"
                android:textColor="@color/midnightBlue"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>